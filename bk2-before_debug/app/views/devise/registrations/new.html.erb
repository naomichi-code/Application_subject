<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!--name表示の追加-->

  <div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
</div>
  <!--name表示の追加-->

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "email" %>
  </div>
<!-- 住所登録機  -->
<div class="field">
  <%= f.label :postal_code %><br>
<%= f.text_field :postal_code, autocomplete: "postal_code", id: "user_postcode" %><br>

<%= f.label :prefecture_code %><br>
<%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all,  :name, :name, autocomplete: "prefecture_code", id: "user_prefecture_code" %><br>

<%= f.label :city %><br>
<%= f.text_field :city,  autocomplete: "address_city", id: "user_address_city" %><br>

<%= f.label :street %><br>
<%= f.text_field :building,  autocomplete: "address_street", id: "user_address_street" %>
</div>
<!-- 住所登録機能  -->

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirm" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
