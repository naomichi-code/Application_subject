<% if @book.errors.any? %>
    <div id="error_explanation">
         <h2><%= @book_comment.errors.count %>errors prohibited this obj from being saved:</h2>
         <ul>
         <% @book_comment.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
        </ul>
    </div>
<% end %>
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile',user: @book.user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book_new %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
		<%= render 'list', book: @book%>
		</table>
			<div>
			<div class="col-xs-12">
				<h4>コメント</h4>
					<div id="comments_area">
						<%= render 'book_comments/index',book: @book %>
					</div>
						<%= render 'book_comments/form',book: @book, book_comments: @book_comment %>
			</div>
	</div>
</div>
